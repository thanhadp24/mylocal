			<div th:if="${product.discountPercent <= 0}">
				<span >[[${product.priceWithFormat}]]đ</span>
			</div>
			<div th:if="${product.discountPercent > 0}">
				Price: &nbsp;
				<span class="text-danger">[[${product.discountPrice}]]đ</span>
				&nbsp;&nbsp;
				<del><span>[[${product.priceWithFormat}]]đ</span></del>
