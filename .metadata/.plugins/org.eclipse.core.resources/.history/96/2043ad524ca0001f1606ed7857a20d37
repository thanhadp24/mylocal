package com.shopapp.admin.repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Modifying;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.shopapp.common.entity.Category;

@Repository
public interface CategoryRepository extends JpaRepository<Category, Integer>{
	
	@Query("SELECT c FROM Category c WHERE c.parent.id is NULL")
	public List<Category> getRootCategories();
	
	public Category findByName(String name);
	
	public Category findByAlias(String alias);
	
	@Query("UPDATE c category c SET c.id = :id WHERE c.enabled = :status")
	@Modifying
	public void updateEnabled(@Param("id")Integer id, @Param("status") boolean status);
}
