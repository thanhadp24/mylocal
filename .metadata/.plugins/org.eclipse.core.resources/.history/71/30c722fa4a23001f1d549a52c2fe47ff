<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="bean-overview.xml" />
	<import resource="bean-scope-lifecycle.xml" />
	
	<bean id="igx" class="com.spring.bean.ItemGroup">
		<property name="id" value="10"></property>
		<property name="name" value="itemGroup 10"></property>
	</bean>

	<!-- create bean via getter & setter -->
	<bean id="itemA" class="com.spring.bean.Item">
		<property name="id" value="11"></property>
		<property name="name" value="item 11"></property>
		<!-- list<String> -->
		<property name="providers">
			<list> 
				<value>P1</value>
				<value>P2</value>
				<value>P3</value>
			</list>
		</property>
		
		<property name="itemGroup">
			<ref bean="igx" />
		</property>
	</bean>
	
	<!-- create bean via empty constructor -->
	<bean id="itemB" class="com.spring.bean.Item">
	</bean>

	<!-- create bean via constructor with 2 params -->
	<bean id="itemC" class="com.spring.bean.Item">
		<constructor-arg name="id" value="13"></constructor-arg>
		<constructor-arg name="name" value="item 13"></constructor-arg>
	</bean>

</beans>