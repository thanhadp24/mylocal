<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<body>
<div class="col-sm-2" th:fragment="content">
	<a th:href="@{'/p/' + ${product.alias}}">
		<div>
			<img th:src="@{${product.mainImagePath}}" width="100px">
			<br>
			<b>[[${product.shortName}]]</b>
		</div>
	</a>
	<div th:if="${product.discountPercent <= 0}">
		<span th:if="${CURRENCY_SYMBOL_POSITION} == 'before price'" th:remove="tag">[[${CURRENCY_SYMBOL}]]</span> 
		[[${product.discountPrice}]]
		<span th:if="${CURRENCY_SYMBOL_POSITION} == 'after price'" th:remove="tag">[[${CURRENCY_SYMBOL}]]</span>
	</div>
	<div th:if="${product.discountPercent > 0}">
		<th:block  th:if="${CURRENCY_SYMBOL_POSITION} == 'before price'">
			<span class="text-danger">[[${CURRENCY_SYMBOL}]] [[${product.discountPrice}]]</span> &nbsp;
			<del><span class="text-underline">[[${CURRENCY_SYMBOL}]] [[${product.priceWithFormat}]]</span></del>
		</th:block>
		<th:block  th:if="${CURRENCY_SYMBOL_POSITION} == 'after price'">
			<span class="text-danger">[[${product.discountPrice}]] [[${CURRENCY_SYMBOL}]]</span> &nbsp;
			<del><span class="text-underline">[[${product.priceWithFormat}]] [[${CURRENCY_SYMBOL}]]</span></del>
		</th:block>
	</div>
</div>
</body>
</html>