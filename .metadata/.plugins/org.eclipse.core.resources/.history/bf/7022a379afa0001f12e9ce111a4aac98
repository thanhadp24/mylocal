
$(document).ready(function() {
	$('#logoutLink').on('click', function(e) {
		e.preventDefault();
		document.logoutForm.submit();
	})
	
	//customizeDropdown();
})

function confirmDeleteModal(entity, link){
	categoryId = link.attr('categoryId');
	$('#yes-btn').attr("href", link.attr("href"));
	$('#confirmText').text('Are you sure to delete ' + entity +' ID: ' + categoryId + "?");
	$('#confirmModal').modal();
}

	
function clearFilter(){
	window.location = moduleURL;
}

