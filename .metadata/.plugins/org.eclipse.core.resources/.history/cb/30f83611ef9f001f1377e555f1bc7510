	<script th:src="@{/webjars/bootstrap/js/bootstrap.min.js}"></script>
	<script th:src="@{/js/common.js}"></script>
</head>
<body>

	
	<th th:fragment="column_link(fieldName, columnLabel, removeTag)" th:remove="${removeTag}">
		<a class="text-dark"
			th:href="@{'/users/page/' + ${currentPage} + '?sortField=' + ${fieldName} + '&sortDir='
				+ ${sortField != fieldName ? sortDir : reverseSortDir} + ${keyword != null ? '&keyword='+keyword:''} }">
			[[${columnLabel}]]
		</a> 
		
		<span th:if="${sortField == fieldName}"
		th:class="${sortDir == 'asc' ? 'fas fa-sort-up' : 'fas fa-sort-down'}"></span>
	</th>
	
	<a th:fragment="page_link(pageNum, label)" 
		class="page-link" 
		th:href="@{'/users/page/' + ${pageNum} + '?sortField=' + ${sortField} + '&sortDir=' + ${sortDir} 
		+ ${keyword != null ? '&keyword='+keyword:''} }">
		[[${label}]]
	</a>
	
	<a th:fragment="icon_disable" th:href="@{'/users/' + ${user.id} + '/enabled/false'}"
		class="fa-regular fa-circle-check fa-lg icon-green"
		th:if="${user.enabled == true}" title="Disable this user"></a>
	
	<a th:fragment="icon_enable" th:href="@{'/users/' + ${user.id} + '/enabled/true'}"
		class="fa-regular fa-circle-check fa-lg icon-gray"
		th:if="${user.enabled == false}" title="Enable this user"></a>
	
	<a th:fragment="edit_user" th:href="@{'/users/edit/' + ${user.id}}" title="Edit this user"
		class="fa-regular fa-pen-to-square fa-lg icon-green"></a>
	
	<a th:fragment="delete_user" th:href="@{'/users/delete/' + ${user.id}}"
		th:userId="${user.id}" title="Delete this user"
		class="fa-regular fa-trash-can fa-lg icon-red link-delete"></a>
		
	<a th:fragment="category_status" th:href="@{'/category/' + ${category.id} + '/enabled/false'}"
		class="fa-regular fa-circle-check fa-lg icon-green"
		th:if="${user.enabled == true}" title="Disable this category"></a>

	<div th:fragment="footer">
		<p class="text-center">Shopapp control panel - Copyright &copy; Shopapp 2024</p>
	</div>	
</body>
